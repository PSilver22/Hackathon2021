<Window x:Class="Main_Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main_Window"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Stretch">
        <ListBox>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Label>Name: </Label>
                    <CheckBox Height="15" Content="Plugged in"/>
                    <CheckBox Height="15" Content="Unplugged" Margin="0,0,100,0" Padding="7,-1,0,0" Grid.IsSharedSizeScope="True"/>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

    </Grid>
</Window>
